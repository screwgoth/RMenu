<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.raseel.rmenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="in.raseel.rmenu.StartSplash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.raseel.rmenu.StaffScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="in.raseel.rmenu.STAFFSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.raseel.rmenu.RestaurantSplash"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="in.raseel.rmenu.MainView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="in.raseel.rmenu.CategoryList"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>